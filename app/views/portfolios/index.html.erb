<h1>Portfolio items</h1>
<%= link_to "Create a new Portfolio", new_portfolio_path %>

<% @portfolio_items.each do |portfolio_item| %>
  <h2><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></h2>
  <h5><%= portfolio_item.subtitle %></h5>
  <p><%= portfolio_item.body %></p>
  <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
  <%= link_to "Edit", edit_portfolio_path(portfolio_item) %>
  <%= button_to "Delete Portfolio", portfolio_path(portfolio_item), method: :delete %>
<% end %>